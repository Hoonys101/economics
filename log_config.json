{
  "version": 1,
  "disable_existing_loggers": false,
  "formatters": {
    "standard": {
      "format": "{asctime} - {name} - {levelname} - {message}",
      "style": "{"
    },
    "csv_formatter": {
      "class": "utils.logging_manager.CsvFormatter",
      "format": null,
      "datefmt": null,
      "style": "%"
    }
  },
  "handlers": {
    "console": {
      "class": "logging.StreamHandler",
      "formatter": "standard",
      "level": "INFO",
      "stream": "ext://sys.stdout"
    },
    "file": {
      "class": "logging.FileHandler",
      "formatter": "standard",
      "level": "DEBUG",
      "filename": "simulation.log",
      "mode": "w"
    }
  },
  "loggers": {
    "simulation": {
      "handlers": ["console", "file"],
      "level": "DEBUG",
      "propagate": false
    },
    "main": {
      "handlers": ["console", "file"],
      "level": "DEBUG",
      "propagate": false
    }
  },
  "root": {
    "handlers": ["console", "file"],
    "level": "DEBUG"
  }
}
